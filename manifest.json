{
  "name": "Twitch RTL",
  "description": "Right To Left Support For Twitch.tv!",
  "version": "1.4.4",
  "homepage_url": "https://github.com/alirezaabdi01",
  "manifest_version": 3,
  "content_scripts": [
    {
      "matches": [
      "*://*.twitch.tv/*"
    ],
      "js": [
        "content.js"
      ]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "512": "Assets/i-512.png"
    }
  },
  "icons": {
    "512": "Assets/i-512.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "twitch-rtl-v3@alirezaabdi.dev"
    }
  }
}